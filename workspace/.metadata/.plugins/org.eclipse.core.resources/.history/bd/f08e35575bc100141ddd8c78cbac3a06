		name = n;
	}
	
	public String getName(){
		return name;
	}
	
	public void setScore(int score){
		score = s;
	}
	
	public int getScore(){
		return score;
	}
	
	public boolean addTile(){        //adding tiles to player's tile-rack
		int initialamount;
		int n = 0; 
		int newamount = initialamount + n;
		if(initialamount < newamount){
			return true;
		}
		return false;
	}
	
	public boolean removeTile(){      //removing tiles from player's tile-rack
		int initialamount;
		int n = 0;
		int newamount = initialamount - n;
		if(initialamount > newamount){
			return true;
		}
		return false;
		}
	
	
	
